<% layout("/layouts/boilerplate")%>

<div class="loginsignupform">
<div class="row log mt-5 mb-5">
    <h4 class="offset-1 mt-3 mb-3">Sign-Up</h4>
    <div class="col-10 offset-1">
        <form action="/signup" method="post" class="needs-validation mb-3 " novalidate >
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" class="form-control" id="username" required>
                <div class="valid-feedback">Looks good!</div>    
                <div class="invalid-feedback">Username Mandatory!</div> 
            </div> 


            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="text" name="email" class="form-control" id="email" required>
                <div class="valid-feedback"> Looks good!</div>    
                <div class="invalid-feedback">Must be a valid Email</div> 
            </div> 


            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="password" required>
                <div class="valid-feedback">Looks good!</div>    
                <div class="invalid-feedback">Enter valid password</div> 
            </div> 


            <button class="btn btn-success mb-3">Sign-Up</button>
            <div class="acc">
            <span>Already have an account? <a href="/login">Login</a></span>
            </div> 
        </form>
     </div>
</div>
</div>
